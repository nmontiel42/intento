{
  "compilerOptions": {
    "target": "ES6",
    "module": "AMD",
    "outFile": "./dist/output.js",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es6", "dom", "ES2017"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}